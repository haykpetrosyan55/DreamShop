<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="@dimen/size0dp"
    app:cardBackgroundColor="@color/appColor"
    app:cardCornerRadius="@dimen/size10dp"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/prodImageId"
        android:layout_width="@dimen/size150dp"
        android:layout_height="@dimen/size130dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/size10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/joker" />

    <TextView
        android:id="@+id/prodNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size170dp"
        android:layout_marginTop="@dimen/size1dp"
        android:text="@string/title"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/textSize18sp" />

    <TextView
        android:id="@+id/priceId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size170dp"
        android:layout_marginTop="@dimen/size55dp"
        android:text="@string/price_5000"
        android:textColor="@color/priceColor"
        android:textSize="@dimen/textSize18sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size170dp"
        android:layout_marginTop="78dp"
        android:numStars="5"
        android:stepSize="0.1" />

    <Button
        android:id="@+id/basketButtonId"
        android:layout_width="@dimen/size50dp"
        android:layout_height="@dimen/size50dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/size1dp"
        android:layout_marginStart="@dimen/size170dp"
        android:background="@drawable/basket_white" />

    <Button
        android:id="@+id/likeButtonId"
        android:layout_width="@dimen/size50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/size1dp"
        android:background="@drawable/heart_white" />

</android.support.v7.widget.CardView>